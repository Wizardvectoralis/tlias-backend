<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tlias.mapper.EmpMapper">

    <select id="getEmpsInOnePage" resultType="com.tlias.pojo.Emp">
        select * from emp
        <where>
            <if test="name!=null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="gender==1 or gender==2">
                and gender=#{gender}
            </if>
            <if test="begin!=null">
                and entrydate &gt; #{begin}
            </if>
            <if test="end!=null">
                and entrydate &lt; #{end}
            </if>
        </where>
        limit #{startPage},#{pageSize}
    </select>

    <select id="getEmpNumber" resultType="long">
        select count(*) from emp
        <where>
            <if test="name!=null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="gender!=1 or gender!=2">
                and gender=#{gender}
            </if>
            <if test="begin!=null">
                and entrydate &gt; #{begin}
            </if>
            <if test="end!=null">
                and entrydate &lt; #{end}
            </if>
        </where>

    </select>


</mapper>